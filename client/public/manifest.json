{
  "manifest_version": 3,
  "name": "LinkedIn Automation",
  "version": "1.0",
  "description": "Messages automation",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./imgs/In.png",
    "48": "./imgs/In.png",
    "128": "./imgs/In.png"
  }
}
